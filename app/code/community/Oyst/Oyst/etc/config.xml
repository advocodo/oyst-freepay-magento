<config>
    <modules>
        <Oyst_Oyst>
            <version>1.0.0</version>
        </Oyst_Oyst>
    </modules>
    <global>
        <models>
            <oyst_oyst>
                <class>Oyst_Oyst_Model</class>
                <resourceModel>oyst_oyst_resource</resourceModel>
            </oyst_oyst>
            <oyst_oyst_resource>
                <class>Oyst_Oyst_Model_Resource</class>
                <entities>
                    <notification>
                        <table>oyst_notification</table>
                    </notification>
                </entities>
            </oyst_oyst_resource>
        </models>

        <resources>
            <oyst_oyst_setup>
                <setup>
                    <module>Oyst_Oyst</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </oyst_oyst_setup>
        </resources>

        <blocks>
            <oyst_oyst>
                <class>Oyst_Oyst_Block</class>
            </oyst_oyst>
        </blocks>

        <helpers>
            <oyst_oyst>
                <class>Oyst_Oyst_Helper</class>
            </oyst_oyst>
        </helpers>

        <fieldsets>
            <sales_convert_quote>
                <oyst_order_id><to_order>*</to_order></oyst_order_id>
            </sales_convert_quote>
            <sales_convert_order>
                <oyst_order_id><to_quote>*</to_quote></oyst_order_id>
            </sales_convert_order>
        </fieldsets>

        <events>
            <!-- Support the lib/Oyst/oyst-php folder -->
            <controller_front_init_before>
                <observers>
                    <oyst_lib_load>
                        <type>object</type>
                        <class>Oyst_Oyst_Helper_Autoloader</class>
                        <method>createAndRegister</method>
                    </oyst_lib_load>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <frontend>
        <routers>
            <oyst_oyst>
                <use>standard</use>
                <args>
                    <module>Oyst_Oyst</module>
                    <frontName>oyst</frontName>
                </args>
            </oyst_oyst>
        </routers>
        <translate>
            <modules>
                <Oyst_Oyst>
                    <files>
                        <default>Oyst_Oyst.csv</default>
                    </files>
                </Oyst_Oyst>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <oyst_oyst after="Mage_Adminhtml">Oyst_Oyst_Adminhtml</oyst_oyst>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <!-- Change the cancel button action -->
            <sales_order_payment_cancel>
                <observers>
                    <oyst_payment>
                        <class>Oyst_Oyst_Model_Observer</class>
                        <method>salesOrderPaymentCancel</method>
                    </oyst_payment>
                </observers>
            </sales_order_payment_cancel>

            <!-- Change the refund button action -->
            <sales_order_payment_refund>
                <observers>
                    <oyst_payment>
                        <class>Oyst_Oyst_Model_Observer</class>
                        <method>salesOrderPaymentRefund</method>
                    </oyst_payment>
                </observers>
            </sales_order_payment_refund>
        </events>
        <layout>
            <updates>
                <oyst_oyst>
                    <file>oyst_oyst.xml</file>
                </oyst_oyst>
            </updates>
        </layout>
        <translate>
            <modules>
                <Oyst_Oyst>
                    <files>
                        <default>Oyst_Oyst.csv</default>
                    </files>
                </Oyst_Oyst>
            </modules>
        </translate>
    </adminhtml>

    <!-- Default configuration values -->
    <default>
        <payment>
            <oyst_abstract>
                <developed_by>Oyst</developed_by>
                <contact_email>dev@oyst.com</contact_email>
                <sdk_version>v1.2.0</sdk_version>
                <enable_logs>1</enable_logs>
                <mode>prod</mode>
                <invoice_label>FreePay</invoice_label>
            </oyst_abstract>
            <oyst_freepay translate="title" module="oyst_oyst">
                <active>1</active>
                <title>Payer par carte bancaire</title>
                <model>oyst_oyst/payment_method_freepay</model>
                <order_status>pending</order_status>
                <payment_cancelled>holded</payment_cancelled>
                <refund_authorized>closed</refund_authorized>
                <payment_action>authorize_capture</payment_action>
                <allowspecific>0</allowspecific>
                <sort_order>0</sort_order>
            </oyst_freepay>
        </payment>
        <oyst>
            <catalog_settings>
                <enable>0</enable>
                <number_per_pack>1000</number_per_pack>
            </catalog_settings>
            <order_settings>
                <enable>0</enable>
            </order_settings>
            <dev>
                <register_autoloader>1</register_autoloader>
                <autoloader_basepath>lib/Oyst/oyst-php</autoloader_basepath>
            </dev>
        </oyst>
    </default>
    <stores>
        <admin>
            <design>
                <package>
                    <name>default</name>
                </package>
                <theme>
                    <default>oyst</default>
                </theme>
            </design>
        </admin>
    </stores>
    <phpunit>
        <suite>
            <modules>
                <Oyst_Oyst/>
            </modules>
        </suite>
    </phpunit>
</config>
